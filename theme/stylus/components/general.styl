.edit-link
    display none !important
.entry-content,
.widget
    a
        img
            box-shadow none
.entry-content,
.entry-summary,
.widget,
.posts-navigation
    a
        transition unset !important
        box-shadow none !important
.site-footer
    .widget-area,
        a
            transition unset !important
            box-shadow none !important
.widget_authors
    a
        strong
            transition unset !important
            box-shadow none !important
.site-footer
    background-color $gray-med
    color $gray-hard
    font-size 16px
    .wrap
        max-width 100%
        h2
            color $primary-color
            font-size 24px
            padding 0
            margin 18px 0
            font-weight 300
        .footer-widget-1
            width 44%
            #text-2
                width 200px
                float left
            #text-3
                display inline-block
                &:after 
                    content ""
                    display table
                    clear both
            #blog_subscription-2
                border-top 1px solid $main-text
        .footer-widget-2
            width 50%
            .wcb_widget_sponsors
                .sponsor-level
                    border-bottom 1px solid $main-text
                    &:last-child
                        border-bottom 0
                    &:after 
                        content ""
                        display table
                        clear both
                    h4
                        margin 0.75em 0
                    .sponsor-logo
                        float left
                        padding-right 10px
                // .patrao-velho
                //     a
                .patrao
                    a
                        height 150px
                        max-width 260px
                .macanudo
                    a
                        height 120px
                        max-width 200px
                .guapo
                    a
                        height 100px
                        max-width 150px
                .petico
                    a
                        height 85px
                        max-width 120px
                .apoio
                    a
                    height 65px
                    max-width 110px